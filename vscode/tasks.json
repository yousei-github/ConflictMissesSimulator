{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build all files",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"-openmp",
				"/Fe:",
				"${workspaceFolder}\\output\\${fileBasenameNoExtension}.exe",
				"${workspaceFolder}\\Codes_C\\*.c"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		},
		{
			"type": "shell",
			"label": "echo",
			"command": "echo ${workspaceFolder}\\Codes_C\\",	//${workspaceFolder}
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}